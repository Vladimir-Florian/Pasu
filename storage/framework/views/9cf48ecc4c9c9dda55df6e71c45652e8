<?php $__env->startSection('content'); ?>

 <h2> Certificates for Profile "<?php echo e($profile->name); ?>" </h2>

   <?php if(!$profile->certificates->count()): ?>
	   No certificates
   <?php else: ?>
	   <ul>
		<?php foreach($profile->certificates as $certificate): ?>
		 <li>
			
			<?php echo Form::open(array('class' => 'form-inline', 'method'=>'DELETE', 'route'=>array('profile_certificates.destroy', $profile->id, $profile->id))); ?>

                <a href="<?php echo e(route('profile_certificates.show', array($profile->id))); ?>"><?php echo e($certificate->slug); ?></a>

				(
                  <?php echo link_to_route('profile_certificates.edit', 'Edit', array($profile->id), array('class' => 'btn btn-info')); ?>,
                  <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?>				
				)
            <?php echo Form::close(); ?>

		 </li>
		<?php endforeach; ?>
	   </ul>
   <?php endif; ?>
		 
	<p>
		<a href="<?php echo e(route('employees.index', ['id' => $profile->id])); ?>"> Back to Profile </a>
		<a href="<?php echo e(route('profile_certificates.create', ['id' => $profile->id])); ?>"> Add Certificate </a>	
	</p>
		 
<?php $__env->stopSection(); ?>		
		

<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>