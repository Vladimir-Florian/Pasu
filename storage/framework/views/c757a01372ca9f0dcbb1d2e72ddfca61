<?php $__env->startSection('content'); ?>

 <h2> <?php echo e($profile->name); ?> </h2>
 

    <?php if( !$profile->certificates->count()): ?>
        Profile has no certificates.
    <?php else: ?>
        <ul>
            <?php foreach( $$profile->certificates as $certificate ): ?>

				<li> <?php echo e($certificate->slug); ?></li>
				<li> <?php echo e($certificate->description); ?></li>
				<li> <?php echo e($certificate->pivot->details); ?></li>

            <?php endforeach; ?>
        </ul>
    <?php endif; ?>



	<p>
		<a href="<?php echo e(route('profile_certificates.index', ['id' => $profile->id])); ?>"> Back to Profile_Certificates </a>	
	</p>
 

<?php $__env->stopSection(); ?>		
		

<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>