			<!-- <a href="<?php echo e(url('employment_types', ['id' => $employment_type->id])); ?>"> <?php echo e($employment_type->name); ?> </a> -->
			
			<?php echo Form::open(array('class' => 'form-inline', 'method' => 'DELETE', 'route' => array('employment_types.destroy', $employment_type->id))); ?>

                <a href="<?php echo e(route('employment_types.show', $employment_type->id)); ?>"><?php echo e($employment_type->name); ?></a>
                (
                  <?php echo link_to_route('employment_types.edit', 'Edit', array($employment_type->id), array('class' => 'btn btn-info')); ?>,
                  <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?>

                )
            <?php echo Form::close(); ?>


			
		 </li>
		<?php endforeach; ?>
	   </ul>
   <?php endif; ?>
		 

