<?php $__env->startSection('content'); ?>

 <h2> Locations </h2>
 
   <?php if(!$locations->count()): ?>
	   No locations
   <?php else: ?>
	   <ul>
		<?php foreach($locations as $location): ?>
		 <li>
			<?php echo Form::open(array('class' => 'form-inline', 'method' => 'DELETE', 'route' => array('locations.destroy', $location->id))); ?>

                <a href="<?php echo e(route('locations.show', $location->id)); ?>"> Look </a>
                (
                  <?php echo link_to_route('locations.edit', 'Edit', array($location->id), array('class' => 'btn btn-info')); ?>,
                  <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?>

                )
            <?php echo Form::close(); ?>

		 </li>
		<?php endforeach; ?>
	   </ul>
   <?php endif; ?>
		 

	<a href="<?php echo e(route('locations.create')); ?>" class="btn btn-info">Create a Location</a>
		 
<?php $__env->stopSection(); ?>		
		

<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>